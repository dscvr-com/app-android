<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".NewFeedItemBinding">
        <import type="co.optonaut.optonaut.model.Optograph" />
        <import type="co.optonaut.optonaut.model.Person" />
        <import type="co.optonaut.optonaut.model.Location" />
        <variable
            name="optograph"
            type="Optograph" />
        <variable
            name="person"
            type="Person" />
        <variable
            name="location"
            type="Location" />
    </data>


    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:drag_edge="left" >

        <LinearLayout
            android:background="@color/feed_text_yellow"
            android:id="@+id/bottom_wrapper"
            android:layout_width="70dp"
            android:weightSum="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share_w_circle"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bar">

                <co.optonaut.optonaut.opengl.Optograph2DCubeView
                    android:id="@+id/optograph2dview"
                    android:background="@color/transparentOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:optograph="@{optograph}"/>

                <LinearLayout
                    android:id="@+id/bar_swipe"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/share"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/profile_bar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom"
                    android:background="@color/feed_bar">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:layout_alignParentLeft="true"
                        app:civ_border_width="0dp"
                        android:background="@drawable/profile_avatar_background"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:background="@color/transparentOverlay"
                        android:id="@+id/person_avatar_asset"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentLeft="true"
                        app:person="@{person}"
                        app:civ_border_width="0dp"/>

                    <RelativeLayout
                        android:id="@+id/person_location_information"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@id/person_avatar_asset">

                        <TextView
                            android:id="@+id/person_name_label"
                            android:layout_above="@+id/dummy"
                            android:layout_gravity="top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/feed_text_yellow"
                            android:textSize="15dp"
                            android:layout_marginBottom="0dp"
                            android:text="@{person.display_name}" />

                        <View
                            android:id="@+id/dummy"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:visibility="invisible" />
                        <TextView
                            android:id="@+id/location_label"
                            android:layout_below="@+id/dummy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/feed_text_white"
                            android:layout_marginTop="0dp"
                            android:textSize="11dp"
                            android:text="@{location.text}"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/heart_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/like_icn"
                        android:layout_toLeftOf="@+id/settings_button"
                        android:textColor="@color/bright" />

                    <TextView
                        android:id="@+id/settings_button"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:textSize="21dp"
                        android:textColor="@color/settingsFontColor"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_toLeftOf="@+id/heart_label"
                        android:background="@drawable/follow_btn_selector"
                        android:textColor="@color/bright" />


                    <TextView
                        android:id="@+id/time_ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/timeAgoFontColor"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/settings_button"
                        android:layout_marginRight="5dp"
                        android:textSize="11dp"
                        android:visibility="gone"
                        app:createdAt="@{optograph.created_at}"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/description_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="0dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/private_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bright"
                        android:layout_marginLeft="0dp"
                        android:visibility="gone"
                        android:layout_toLeftOf="@+id/description_label"/>

                    <co.optonaut.optonaut.views.ExpandableTextView
                        android:id="@+id/description_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bright"
                        android:layout_marginLeft="16dp"
                        android:maxWidth="288dp"
                        app:trimLength="32"
                        android:text="@{optograph.text}"/>

                    <TextView
                        android:id="@+id/feed_upload_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bright"
                        android:paddingBottom="3dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/description_label"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="upload"
                        android:drawableStart="@drawable/abc_ic_commit_search_api_mtrl_alpha"
                        android:visibility="gone"/>

                    <ProgressBar
                        android:id="@+id/feed_upload_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bright"
                        android:paddingBottom="3dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/description_label"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        style="@android:style/Widget.ProgressBar.Inverse"
                        android:visibility="gone"/>
                </RelativeLayout>

            </FrameLayout>

            <View
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/black" />

        </RelativeLayout>

    </com.daimajia.swipe.SwipeLayout>

</layout> 