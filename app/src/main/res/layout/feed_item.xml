<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class=".FeedItemBinding">
        <import type="co.optonaut.optonaut.model.Optograph" />
        <import type="co.optonaut.optonaut.model.Person" />
        <variable
            name="optograph"
            type="Optograph" />
        <variable
            name="person"
            type="Person" />
    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/informationBar">

        <com.triposo.barone.ScalingImageView
            android:id="@+id/optograph_preview_asset"
            android:layout_width="match_parent"
            android:background="@color/debugView2"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            tools:src="@android:drawable/sym_def_app_icon"
            app:assetId="@{optograph.preview_asset_id}"/>

        <ImageView
            android:id="@+id/person_avatar_asset"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_below="@id/optograph_preview_asset"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:avatarId="@{person.avatar_asset_id}"/>

        <!--
        <ImageView
            android:id="@+id/favorite_button"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:background="@color/informationBar"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_below="@id/optograph_preview_asset"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"/> -->
    </RelativeLayout>
</layout> 