<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class=".FeedItemBinding">
        <import type="co.optonaut.optonaut.model.Optograph" />
        <import type="co.optonaut.optonaut.model.Person" />
        <import type="co.optonaut.optonaut.model.Location" />
        <variable
            name="optograph"
            type="Optograph" />
        <variable
            name="person"
            type="Person" />
        <variable
            name="location"
            type="Location" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <co.optonaut.optonaut.opengl.Optograph2DCubeView
            android:id="@+id/optograph2dview"
            android:background="@color/transparentOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:optograph="@{optograph}"/>

        <RelativeLayout
            android:id="@+id/profile_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="top"
            android:background="@color/semiTransparentOverlay">
            <de.hdodenhof.circleimageview.CircleImageView
                android:background="@color/transparentOverlay"
                android:id="@+id/person_avatar_asset"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                app:person="@{person}"
                app:civ_border_width="0dp"/>

            <RelativeLayout
                android:id="@+id/person_location_information"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/person_avatar_asset">

                <TextView
                    android:id="@+id/person_name_label"
                    android:layout_above="@+id/dummy"
                    android:layout_gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/optonautMain"
                    android:textSize="15dp"
                    android:layout_marginBottom="2dp"
                    android:text="@{person.display_name}"/>
                <View
                    android:id="@+id/dummy"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/location_label"
                    android:layout_below="@+id/dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/locationFontColor"
                    android:layout_marginTop="2dp"
                    android:textSize="11dp"
                    android:text="@{location.text}"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/time_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/timeAgoFontColor"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/settings_label"
                android:layout_marginRight="5dp"
                android:textSize="11dp"
                app:createdAt="@{optograph.created_at}"/>

            <TextView
                android:id="@+id/settings_label"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:textSize="21dp"
                android:textColor="@color/settingsFontColor"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/description_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp">

            <TextView
                android:id="@+id/private_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bright"
                android:layout_marginLeft="0dp"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/description_label"/>

            <co.optonaut.optonaut.views.redesign.ExpandableTextView
                android:id="@+id/description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bright"
                android:layout_marginLeft="16dp"
                android:maxWidth="288dp"
                app:trimLength="32"
                android:text="@{optograph.text}"/>

            <TextView
                android:id="@+id/heart_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bright"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/description_label"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"/>
        </RelativeLayout>

    </FrameLayout>
</layout> 