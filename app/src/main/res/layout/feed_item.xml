<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class=".FeedItemBinding">
        <import type="co.optonaut.optonaut.model.Optograph" />
        <variable
            name="optograph"
            type="Optograph" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <ImageView
            android:id="@+id/optograph_preview_asset"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:src="@android:drawable/sym_def_app_icon"
            app:assetId="@{optograph.preview_asset_id}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/optograph_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{optograph.text}"
                tools:text="Title" />
        </LinearLayout>
    </LinearLayout>
</layout> 