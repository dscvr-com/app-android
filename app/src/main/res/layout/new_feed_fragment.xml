<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <co.optonaut.optonaut.views.SnappyRecyclerView
        android:id="@+id/optographFeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"/>

    <RelativeLayout
        android:id="@+id/buttons_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header_overlay"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <ImageButton
                android:id="@+id/header_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bright"
                android:background="@drawable/logo_arrow_small_dark"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"/>

            <ImageButton
                android:id="@+id/profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/profile_icn"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/navigation_buttons"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:background="@drawable/black_gradient"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/theta_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/record_group"
                android:layout_alignParentLeft="true"
                android:paddingBottom="45dp"
                android:paddingLeft="10dp">
                <ImageButton
                    android:id="@+id/theta_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/photo_library"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/record_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true">

                <Button
                    android:id="@+id/record_btn"
                    android:textColor="@color/bright"
                    android:background="@drawable/record_button_shape"
                    android:layout_centerVertical="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textSize="33dp"/>

                <ProgressBar
                    android:id="@+id/record_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    style="@android:style/Widget.ProgressBar.Small.Inverse"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_group"
                android:layout_toRightOf="@+id/record_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingBottom="45dp"
                android:paddingRight="10dp"
                android:gravity="end">

                <ImageButton
                    android:id="@+id/settings_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/settings"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
