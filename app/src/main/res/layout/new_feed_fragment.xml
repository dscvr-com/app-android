<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        sothree:umanoPanelHeight="30dp"
        sothree:umanoShadowHeight="0dp"
        sothree:umanoOverlay="true"
        sothree:umanoClipPanel="false" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <co.optonaut.optonaut.views.SnappyRecyclerView
                android:id="@+id/optographFeed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"/>

            <ImageButton
                android:id="@+id/header_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/logo_arrow_small_dark"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:id="@+id/navigation_buttons"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:background="@drawable/black_gradient"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/fab_margin">

                <RelativeLayout
                    android:id="@+id/theta_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/record_group"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp">
                    <ImageButton
                        android:id="@+id/theta_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/photo_library"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/record_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true">

                    <ImageButton
                        android:id="@+id/camera_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/camera_selector"/>

                    <ProgressBar
                        android:id="@+id/record_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        style="@android:style/Widget.ProgressBar.Small.Inverse"
                        android:visibility="gone"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_group"
                    android:layout_toRightOf="@+id/record_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingRight="10dp"
                    android:gravity="end">

                    <ImageButton
                        android:id="@+id/settings_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/settings"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" >

            <!--android:background="@color/feed_bar"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bar_transparent"
                android:paddingTop="59dp"
                android:paddingBottom="10dp"
                android:paddingLeft="42.5dp"
                android:paddingRight="42.5dp"
                android:background="@color/settings_bg"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera Settings"
                    android:textStyle="bold"
                    android:textColor="@color/settings_text"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/settings_text"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:text="Mode"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="52.5dp">

                        <ImageButton
                            android:id="@+id/one_ring_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/one_ring_active_icn"/>

                        <TextView
                            android:id="@+id/one_ring_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/one_ring_button"
                            android:textColor="@color/text_inactive"
                            android:textSize="13sp"
                            android:text="One Ring"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageButton
                            android:id="@+id/three_ring_button"
                            android:layout_width="wrap_content"
                            android:layout_toRightOf="@id/one_ring_button"
                            android:layout_height="wrap_content"
                            android:background="@drawable/three_ring_inactive_icn"/>

                        <TextView
                            android:id="@+id/three_ring_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/three_ring_button"
                            android:layout_toRightOf="@id/one_ring_button"
                            android:textColor="@color/text_inactive"
                            android:textSize="13sp"
                            android:text="Three Ring"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_inactive"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/settings_text"
                    android:text="Capture Type"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="25dp"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="52.5dp">
                        <ImageButton
                            android:id="@+id/manual_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/manual_inactive_icn"/>
                        <TextView
                            android:id="@+id/manual_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/manual_button"
                            android:textColor="@color/text_inactive"
                            android:textSize="13sp"
                            android:text="Manual"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageButton
                            android:id="@+id/motor_button"
                            android:layout_width="wrap_content"
                            android:layout_toRightOf="@id/manual_button"
                            android:layout_height="wrap_content"
                            android:background="@drawable/motor_inactive_icn"/>
                        <TextView
                            android:id="@+id/motor_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/motor_button"
                            android:layout_toRightOf="@id/manual_button"
                            android:textColor="@color/text_inactive"
                            android:textSize="13sp"
                            android:text="Motor"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/bar_transparent"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

    <ImageButton
        android:id="@+id/profile_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/profile_icn"/>

</RelativeLayout>