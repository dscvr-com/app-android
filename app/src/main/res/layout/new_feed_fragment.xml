<?xml version="1.0" encoding="utf-8"?>
    <layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data class=".NewFeedBinding" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/optonautMain">

        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            xmlns:sothree="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            sothree:umanoPanelHeight="30dp"
            sothree:umanoShadowHeight="0dp"
            sothree:umanoOverlay="true"
            sothree:umanoClipPanel="false" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.iam360.iam360.views.SnappyRecyclerView
                    android:id="@+id/optographFeed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"/>

                <ImageButton
                    android:id="@+id/header_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/logo_arrow_small_dark"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:id="@+id/navigation_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:background="@drawable/black_gradient"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="@dimen/fab_margin">

                    <RelativeLayout
                        android:id="@+id/theta_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/record_group"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="10dp">
                        <ImageButton
                            android:id="@+id/theta_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/photo_library"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/record_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true">

                        <ImageButton
                            android:id="@+id/camera_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/camera_selector"/>

                        <ProgressBar
                            android:id="@+id/record_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            style="@android:style/Widget.ProgressBar.Small.Inverse"
                            android:visibility="gone"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/setting_group"
                        android:layout_toRightOf="@+id/record_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:gravity="end">

                        <ImageButton
                            android:id="@+id/settings_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/settings"/>

                        <TextView
                            android:id="@+id/number_local_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/fab_size_normal"
                            android:layout_alignParentBottom="true"
                            android:textSize="18sp"
                            android:text="0"
                            android:padding="@dimen/navigation_elevation"
                            android:visibility="invisible"/>

                        <ImageView
                            android:id="@+id/number_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/fab_size_mini"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/upload_later_icn_white"
                            android:visibility="invisible"/>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" >

                <!--android:background="@color/feed_bar"-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bar_transparent"
                    android:paddingBottom="10dp"
                    android:paddingLeft="72dp"
                    android:background="@color/settings_bg" >

                    <TextView
                        android:id="@+id/settings_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_title"
                        android:layout_marginTop="20dp"
                        android:textSize="21sp"
                        app:font="@{`bold`}"
                        android:layout_centerHorizontal="true"/>

                    <ImageView
                        android:id="@+id/iam_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/settings_title"
                        android:background="@drawable/logo_settings"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_dark"
                        android:layout_below="@+id/iam_logo"
                        android:layout_marginTop="20dp"
                        android:text="0.84" />

                    <TextView
                        android:id="@+id/settings_vr_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_dark"
                        android:layout_below="@+id/iam_logo"
                        android:layout_marginTop="20dp"
                        app:font="@{`bold`}"
                        android:text="@string/settings_vr_image" />

                    <LinearLayout
                        android:id="@+id/in3d_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/settings_vr_image">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/bar_1"
                                android:layout_width="1dp"
                                android:layout_height="11dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:background="@color/feed_bar"/>

                            <TextView
                                android:id="@+id/settings_view_iam_360_in"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_light"
                                android:textSize="12sp"
                                app:font="@{`bold`}"
                                android:layout_gravity="center_vertical"
                                android:text="@string/settings_view_iam_360_in" />

                            <View
                                android:id="@+id/bar_2"
                                android:layout_width="1dp"
                                android:layout_height="11dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:background="@color/feed_bar"
                                android:layout_below="@+id/in3d_layout" />

                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/a3d_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/settings_view_iam_360_in"
                            android:background="@drawable/a3dvr_inactive_icn"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/settings_feed_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_dark"
                        android:layout_below="@+id/in3d_layout"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        app:font="@{`bold`}"
                        android:text="@string/settings_feed_default" />

                    <LinearLayout
                        android:id="@+id/feed_default_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/settings_feed_default">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <ImageButton
                                    android:id="@+id/gyro_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/gyro_big_active_icn"/>

                            </LinearLayout>

                            <View
                                android:id="@+id/bar_3"
                                android:layout_width="1dp"
                                android:layout_height="50dp"
                                android:background="@color/feed_bar" />

                            <TextView
                                android:id="@+id/settings_gyro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/text_light"
                                android:layout_gravity="center_vertical"
                                android:textSize="16sp"
                                app:font="@{`bold`}"
                                android:text="@string/settings_gyro" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">

                                <ImageButton
                                    android:id="@+id/little_planet_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/little_planet_big_inactive_icn"/>

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="50dp"
                                android:background="@color/feed_bar" />

                            <TextView
                                android:id="@+id/settings_little_planet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/text_light"
                                android:layout_gravity="center_vertical"
                                android:textSize="16sp"
                                app:font="@{`bold`}"
                                android:text="@string/settings_little_planet" />


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/settings_capture_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/feed_default_layout"
                        android:textColor="@color/text_dark"
                        android:text="@string/settings_capture_mode"
                        android:textSize="14sp"
                        app:font="@{`bold`}" />

                    <LinearLayout
                        android:id="@+id/capture_mode_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/settings_capture_mode">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageButton
                                    android:id="@+id/one_ring_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/one_ring_active_icn"/>

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="45dp"
                                android:background="@color/feed_bar" />

                            <TextView
                                android:id="@+id/settings_one_ring"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/text_light"
                                android:layout_gravity="center_vertical"
                                android:textSize="16sp"
                                app:font="@{`bold`}"
                                android:text="@string/settings_one_ring" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">

                                <ImageButton
                                    android:id="@+id/three_ring_button"
                                    android:layout_width="wrap_content"
                                    android:layout_toRightOf="@id/one_ring_button"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/three_ring_inactive_icn"/>

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="45dp"
                                android:background="@color/feed_bar" />

                            <TextView
                                android:id="@+id/settings_three_ring"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/text_light"
                                android:layout_gravity="center_vertical"
                                android:textSize="16sp"
                                app:font="@{`bold`}"
                                android:text="@string/settings_three_ring" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/settings_capture_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/capture_mode_layout"
                        android:textColor="@color/text_dark"
                        android:layout_marginTop="5dp"
                        android:text="@string/settings_capture_type"
                        android:textSize="14sp"
                        android:visibility="invisible"
                        app:font="@{`bold`}" />

                    <LinearLayout
                        android:id="@+id/capture_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:visibility="invisible"
                        android:layout_below="@+id/settings_capture_type">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageButton
                                    android:id="@+id/manual_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/manual_inactive_icn"/>

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="45dp"
                                android:background="@color/feed_bar" />

                            <TextView
                                android:id="@+id/settings_manual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/text_light"
                                android:layout_gravity="center_vertical"
                                android:textSize="16sp"
                                app:font="@{`bold`}"
                                android:text="@string/settings_manual" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">

                                <ImageButton
                                    android:id="@+id/motor_button"
                                    android:layout_width="wrap_content"
                                    android:layout_toRightOf="@id/manual_button"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/motor_inactive_icn"/>

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="45dp"
                                android:background="@color/feed_bar" />

                            <TextView
                                android:id="@+id/settings_motor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/text_light"
                                android:layout_gravity="center_vertical"
                                android:textSize="16sp"
                                app:font="@{`bold`}"
                                android:text="@string/settings_motor" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/bar_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"/>
                <ImageButton
                    android:id="@+id/pull_up_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/pull_up_arrow_icon"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"/>

            </RelativeLayout>

        </com.sothree.slidinguppanel.SlidingUpPanelLayout>

        <ImageButton
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/profile_icn"
            android:background="@color/transparentOverlay"/>

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="15dp"
            android:src="@drawable/search_home"
            android:background="@color/transparentOverlay"/>
    </RelativeLayout>

</layout>