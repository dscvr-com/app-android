                            android:textColor="@color/profile_bg"
                            android:textSize="18sp"
                            app:font="@{``}" />

                        <TextView
                            android:id="@+id/person_optographs_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text='@{String.valueOf(person.optographs_count) + " Posts"}'
                            android:textColor="@color/profile_columns_text"
                            android:visibility="gone" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/person_followers_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text='@{String.valueOf(person.followers_count) + "\n Followers"}'
                            android:textColor="@color/bright"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/person_followed_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text='@{String.valueOf(person.followed_count) + "\n Following"}'
                            android:textColor="@color/bright"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/feed_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/person_following_bar"
                        android:visibility="gone">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/optograph_local"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|top"
                            android:visibility="gone" />

                    </FrameLayout>

                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/optographFeed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top"
                android:clipToPadding="false"
                android:layout_below="@id/header_sample"/>
        </RelativeLayout>
