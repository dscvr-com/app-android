                        android:textSize="12sp"
                        android:visibility="gone"
                        app:font="@{``}" />

                    <TextView
                        android:id="@+id/person_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/person_is_followed"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/navigation_elevation"
                        android:layout_marginRight="@dimen/navigation_elevation"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="@{person.text}"
                        android:textColor="@color/text_dark"
                        app:font="@{``}" />

                    <EditText
                        android:id="@+id/person_desc_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/person_is_followed"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:text="@{person.text}"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        app:font="@{``}" />

                    <View
                        android:id="@+id/line_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/person_desc_edit"
                        android:layout_marginTop="@dimen/navigation_padding_bottom"
                        android:background="@color/profile_columns_text" />

