                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/navigation_elevation"
                android:paddingRight="@dimen/navigation_elevation"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPLOAD" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="My Profile"
                        android:textSize="21sp"
                        app:font="@{``}" />

                </android.support.v7.widget.Toolbar>

                <LinearLayout
                    android:id="@+id/toolbar_replace"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/line_2"
                    android:background="@color/text_dark"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='IAM360 Images'
                        android:textColor="@color/profile_bg"
                        android:textSize="18sp"
                        app:font="@{``}" />

                </LinearLayout>

