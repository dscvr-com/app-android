<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="43.5dp"
    android:paddingBottom="7.5dp"
    android:paddingLeft="42.5dp"
    android:paddingRight="42.5dp"
    android:background="@color/optonautMain_3"
    tools:context=".views.SettingsFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_big"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera Settings"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Mode"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/one_ring_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/one_ring_inactive_icn"/>
        <TextView
            android:id="@+id/one_ring_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/one_ring_button"
            android:textColor="@android:color/white"
            android:text="One Ring"/>
        <ImageButton
            android:id="@+id/three_ring_button"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/one_ring_button"
            android:layout_height="wrap_content"
            android:background="@drawable/three_ring_inactive_icn"/>
        <TextView
            android:id="@+id/three_ring_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/three_ring_button"
            android:layout_toRightOf="@id/one_ring_button"
            android:textColor="@android:color/white"
            android:text="Three Ring"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Capture Type"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/manual_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/manual_inactive_icn"/>
        <TextView
            android:id="@+id/manual_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/manual_button"
            android:textColor="@android:color/white"
            android:text="Manual"/>
        <ImageButton
            android:id="@+id/motor_button"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/manual_button"
            android:layout_height="wrap_content"
            android:background="@drawable/motor_inactive_icn"/>
        <TextView
            android:id="@+id/motor_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/motor_button"
            android:layout_toRightOf="@id/manual_button"
            android:textColor="@android:color/white"
            android:text="Motor"/>
    </RelativeLayout>
</LinearLayout>