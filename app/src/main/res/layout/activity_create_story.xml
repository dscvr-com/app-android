<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="com.iam360.dscvr.CreateStoryDetailsBinding">

        <import type="com.iam360.dscvr.model.Optograph" />
        <import type="com.iam360.dscvr.model.Person" />
        <import type="com.iam360.dscvr.model.Location" />

        <variable
            name="optograph"
            type="Optograph" />

        <variable
            name="person"
            type="Person" />

        <variable
            name="location"
            type="Location" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bar">

        <com.iam360.dscvr.opengl.Optograph2DCubeView
            android:id="@+id/optograph2dview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/transparentOverlay"
            app:optograph="@{optograph}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="bottom|center_horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/bubble_text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:visibility="gone"
                    android:paddingRight="10dp">
                    <TextView
                        android:id="@+id/bubble_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/close_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingTop="25dp">

            <ImageButton
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/close_x_icn" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/delete_story_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/bright"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/close_x_icn" />


        <RelativeLayout
            android:id="@+id/profile_bar_1"
            android:paddingBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/marker_text_edittxt_container"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/marker_text"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical|right"
                    android:textColor="@color/feed_text_white"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <EditText
                    android:id="@+id/marker_text_edittxt"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:background="@color/feed_text_white"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:text=""/>
            </RelativeLayout>

            <EditText
                android:id="@+id/static_text_edittxt"
                android:layout_width="match_parent"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:background="@color/feed_text_white"
                android:visibility="gone"
                android:layout_height="50dp"
                android:text=""
                android:layout_above="@+id/profile_bar"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp" />

            <RelativeLayout
                android:id="@+id/profile_bar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true">
                <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="56dp"-->
                    <!--android:padding="10dp"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_centerHorizontal="true">-->
                <!--</RelativeLayout>-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignTop="@+id/profile_bar"
                android:layout_alignParentStart="true">
                <RelativeLayout
                    android:id="@+id/add_music_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignWithParentIfMissing="true">

                    <ImageView
                        android:id="@+id/add_music"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/add_music_round" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/add_text_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/add_music_container">

                    <ImageView
                        android:id="@+id/add_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/add_text_round" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/done_add_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_alignWithParentIfMissing="true">

                    <ImageView
                        android:id="@+id/done_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/done_btn" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/add_image_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignWithParentIfMissing="true">
                    <ImageView
                        android:id="@+id/add_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/add_image_pin" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/add_text_pin_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/add_image_container">

                    <ImageView
                        android:id="@+id/add_text_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/add_text_pin" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_above="@+id/profile_bar"
                android:layout_alignParentStart="true">
                <TextView
                    android:id="@+id/story_fix_txt"
                    android:layout_width="fill_parent"
                    android:visibility="gone"
                    android:textColor="@color/feed_text_white"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</layout>