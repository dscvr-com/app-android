<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class=".GridItemBinding">
        <import type="com.iam360.iam360.model.Optograph" />
        <variable
            name="optograph"
            type="Optograph" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black" >

        <ImageView
            android:id="@+id/optograph2dview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            app:optograph_preview="@{optograph}"/>

        <RelativeLayout
            android:id="@+id/description_bar"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_gravity="bottom"
            android:background="@color/feed_bar" >

            <com.iam360.iam360.views.ExpandableTextView
                android:id="@+id/description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:maxWidth="288dp"
                app:trimLength="32"
                android:layout_centerVertical="true"
                android:textColor="@color/text_yellow"
                app:font="@{``}"
                android:text="@{optograph.text}"/>

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_icn_white"
                android:background="@color/transparentOverlay"
                android:padding="@dimen/navigation_elevation"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/heart_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/like_icn"
                android:textColor="@color/bright"
                android:paddingRight="@dimen/fab_elevation"
                android:paddingLeft="@dimen/fab_elevation"
                android:paddingTop="@dimen/appbar_elevation"
                android:paddingBottom="@dimen/appbar_elevation"
                android:layout_toLeftOf="@id/delete_button"/>

            <ImageButton
                android:id="@+id/grid_upload_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/upload_profile"
                android:layout_toLeftOf="@id/delete_button"/>

            <ProgressBar
                android:id="@+id/grid_upload_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/delete_button"
                style="@android:style/Widget.ProgressBar.Small.Inverse"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:background="@android:color/black" />

    </FrameLayout>

</layout>