<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/signin_bg"
    android:gravity="center"
    tools:context=".views.profile.SigninFBFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_dark" />

        <ImageButton
            android:id="@+id/fb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/facebook_connect_button" />

    </LinearLayout>

    <EditText
        android:id="@+id/username_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:background="@drawable/edittext_bg"
        android:drawablePadding="12.5dp"
        android:drawableStart="@drawable/username_icn"
        android:hint="Username"
        android:paddingBottom="10dp"
        android:paddingLeft="13.5dp"
        android:paddingTop="10dp"
        android:textSize="13.3sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_edit"
        android:layout_marginBottom="23dp"
        android:background="@drawable/edittext_bg"
        android:drawablePadding="12.5dp"
        android:drawableStart="@drawable/password_icn"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingBottom="10dp"
        android:paddingLeft="13.5dp"
        android:paddingTop="10dp"
        android:textSize="13.3sp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_edit"
        android:layout_marginBottom="19dp"
        android:background="@drawable/login_btn"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:layout_marginBottom="22dp"
        android:background="@drawable/register_btn"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/reset_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3.5dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Forgot your password? "
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/reset_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset here"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>


