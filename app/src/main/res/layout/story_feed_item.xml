<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".StoryFeedItemBinding">
        <import type="com.iam360.dscvr.model.Optograph" />
        <import type="com.iam360.dscvr.model.Person" />
        <import type="com.iam360.dscvr.model.Location" />
        <variable
            name="optograph"
            type="Optograph" />
        <variable
            name="person"
            type="Person" />
        <variable
            name="location"
            type="Location" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="105dp"
                    android:layout_height="105dp">
                    <ImageView
                        android:id="@+id/story_preview"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:scaleType="fitXY"
                        android:gravity="center"
                        android:background="@drawable/placeholder"
                        app:story_preview="@{optograph}" />

                    <ImageView
                        android:id="@+id/story_preview_edit"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:gravity="center"
                        android:background="@drawable/edit_icn_button"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:text="@{person.user_name}" />

            </LinearLayout>

            <!--<View-->
                <!--android:layout_width="170dp"-->
                <!--android:layout_height="170dp"-->
                <!--android:orientation="horizontal"-->
                <!--android:background="@drawable/rounded_bg"/>-->

        </android.support.v7.widget.CardView>

    </FrameLayout>


</layout> 