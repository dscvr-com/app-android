<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".ItemAutoCompleteSearchBinding">

        <import type="com.iam360.iam360.model.Person" />
        <import type="com.iam360.iam360.model.Location" />
        <variable
            name="person"
            type="Person" />
        <variable
            name="location"
            type="Location" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profile_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_avatar_asset_padding"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/profile_avatar_background"
                app:civ_border_width="0dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_avatar_asset"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="14dp"
                android:background="@color/transparentOverlay"
                app:civ_border_width="0dp"
                app:person="@{person}" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_toRightOf="@id/person_avatar_asset_padding">

                <RelativeLayout
                    android:id="@+id/person_location_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp">

                    <TextView
                        android:id="@+id/person_name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="0dp"
                        android:text="@{String.valueOf(person.display_name).isEmpty()?person.user_name:person.display_name}"
                        android:textColor="@color/text_search"
                        android:textSize="16sp" />

                    <!--android:text="@{location.text}"-->
                    <TextView
                        android:id="@+id/location_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/feed_text_white"
                        android:textSize="11dp"
                        android:visibility="gone"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/feed_bar"
                    android:layout_marginTop="10dp"
                    android:layout_alignStart="@id/person_location_information"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</layout>