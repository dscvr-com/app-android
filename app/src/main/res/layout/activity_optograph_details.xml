<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".OptographDetailsBinding">

        <import type="com.iam360.dscvr.model.Optograph" />
        <import type="com.iam360.dscvr.model.Person" />
        <import type="com.iam360.dscvr.model.Location" />

        <variable
            name="optograph"
            type="Optograph" />

        <variable
            name="person"
            type="Person" />

        <variable
            name="location"
            type="Location" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bar">

        <com.iam360.dscvr.opengl.Optograph2DCubeView
            android:id="@+id/optograph2dview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/transparentOverlay"
            app:optograph="@{optograph}" />

        <RelativeLayout
            android:id="@+id/close_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingTop="30dp">

            <ImageButton
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/back_arrow" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/menu_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="18dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/export_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                android:background="@drawable/export_icn" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/vr_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/vr_icon" />

                <ImageButton
                    android:id="@+id/gyro_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gyro_small_inactive" />

            </LinearLayout>



        </LinearLayout>

        <RelativeLayout
            android:id="@+id/menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="18dp"
            android:layout_marginTop="40dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/arrow_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_up_icn" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/arrow_menu"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/little_planet_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/little_planet_inactive_icn_copy" />

                <!--<ImageButton-->
                <!--android:id="@+id/gyro_button"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/gyro_inactive_icn_copy"-->
                <!--android:layout_marginTop="12dp" />-->

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_bar_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/profile_bar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:background="@color/feed_bar">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/person_avatar_asset_padding"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/profile_avatar_bg_feed"
                    app:civ_border_width="0dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/person_avatar_asset"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/transparentOverlay"
                    app:civ_border_width="0dp"
                    app:person="@{person}" />

                <RelativeLayout
                    android:id="@+id/follow_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/feed_follow_icn" />

                </RelativeLayout>

                <!--android:visibility="@{person.elite_status ? 0 : 2}"-->
                <RelativeLayout
                    android:id="@+id/badge_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:background="@color/transparentOverlay"
                        android:src="@drawable/elite_beta_user_badge"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/person_avatar_asset_padding">

                    <RelativeLayout
                        android:id="@+id/person_location_information"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp">

                        <TextView
                            android:id="@+id/person_name_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/dummy"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="top"
                            android:layout_marginBottom="0dp"
                            android:text="@{person.user_name}"
                            android:textColor="@color/feed_text_white"
                            android:textSize="15dp"/>

                        <View
                            android:id="@+id/dummy"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/location_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/dummy"
                            android:layout_marginTop="0dp"
                            android:text="@{location.text}"
                            android:textColor="@color/feed_text_white"
                            android:textSize="11dp" />

                    </RelativeLayout>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_toLeftOf="@+id/heart_container"
                        android:background="@drawable/follow_btn_selector"
                        android:textColor="@color/bright"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/share_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/heart_container">

                        <ImageView
                            android:id="@+id/share_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/share_bar_icn" />

                    </RelativeLayout>

                    <!--android:layout_toLeftOf="@id/delete_button"-->
                    <RelativeLayout
                        android:id="@+id/heart_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignWithParentIfMissing="true">

                        <TextView
                            android:id="@+id/heart_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/like_icn"
                            android:text="1"
                            android:textColor="@color/bright"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/settings_button"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/settingsFontColor"
                        android:textSize="21dp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/time_ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/settings_button"
                        android:textColor="@color/timeAgoFontColor"
                        android:textSize="11dp"
                        android:visibility="gone"
                        app:createdAt="@{optograph.created_at}" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/description_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/profile_bar"
                android:layout_margin="10dp">

                <com.iam360.dscvr.views.ExpandableTextView
                    android:id="@+id/description_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/delete_button"
                    android:textColor="@color/bright"
                    app:trimLength="45"
                    android:text="@{optograph.text}"/>

                <ImageButton
                    android:id="@+id/delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="@color/transparentOverlay"
                    android:padding="@dimen/fab_elevation"
                    android:src="@drawable/delete_icn" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/private_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:textColor="@color/bright"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/feed_upload_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableStart="@drawable/abc_ic_commit_search_api_mtrl_alpha"
                android:paddingBottom="3dp"
                android:text="upload"
                android:textColor="@color/bright"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/feed_upload_progress"
                style="@android:style/Widget.ProgressBar.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="3dp"
                android:textColor="@color/bright"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/overlay_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@color/semiTransparentOverlay"
            android:visibility="gone">

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </FrameLayout>

</layout>