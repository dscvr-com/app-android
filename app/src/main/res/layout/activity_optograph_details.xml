<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".OptographDetailsBinding">

        <import type="com.iam360.iam360.model.Optograph" />
        <import type="com.iam360.iam360.model.Person" />
        <import type="com.iam360.iam360.model.Location" />

        <variable
            name="optograph"
            type="Optograph" />

        <variable
            name="person"
            type="Person" />

        <variable
            name="location"
            type="Location" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bar">

        <com.iam360.iam360.opengl.Optograph2DCubeView
            android:id="@+id/optograph2dview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/transparentOverlay"
            app:optograph="@{optograph}" />

        <RelativeLayout
            android:id="@+id/close_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp">

            <ImageButton
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/close_x_icn"
                android:layout_margin="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/menu_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:layout_marginTop="40dp"
            android:layout_marginRight="18dp">

            <ImageButton
                android:id="@+id/vr_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vr_icon"
                android:layout_marginBottom="20dp" />

            <ImageButton
                android:id="@+id/gyro_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gyro_inactive_icn_copy"/>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:layout_marginRight="18dp">

            <ImageButton
                android:id="@+id/arrow_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_up_icn"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/arrow_menu"
                android:layout_centerHorizontal="true">

                <ImageButton
                    android:id="@+id/little_planet_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/little_planet_inactive_icn_copy"
                    android:layout_marginTop="12dp" />

                <!--<ImageButton-->
                    <!--android:id="@+id/gyro_button"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@drawable/gyro_inactive_icn_copy"-->
                    <!--android:layout_marginTop="12dp" />-->

            </LinearLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_icn"
            android:background="@color/transparentOverlay"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="65dp"
            android:padding="@dimen/fab_elevation"/>

        <RelativeLayout
            android:id="@+id/profile_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="@color/feed_bar">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_avatar_asset_padding"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentLeft="true"
                app:civ_border_width="0dp"
                android:background="@drawable/profile_avatar_background"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:background="@color/transparentOverlay"
                android:id="@+id/person_avatar_asset"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentLeft="true"
                app:person="@{person}"
                app:civ_border_width="0dp"/>

            <RelativeLayout
                android:id="@+id/follow_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/feed_follow_icn"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/person_avatar_asset_padding" >

                <RelativeLayout
                    android:id="@+id/person_location_information"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp" >

                    <TextView
                        android:id="@+id/person_name_label"
                        android:layout_above="@+id/dummy"
                        android:layout_gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/feed_text_yellow"
                        android:textSize="15dp"
                        android:layout_marginBottom="0dp"
                        android:text="@{person.display_name}" />

                    <View
                        android:id="@+id/dummy"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/location_label"
                        android:layout_below="@+id/dummy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/feed_text_white"
                        android:layout_marginTop="0dp"
                        android:textSize="11dp"
                        android:text="@{location.text}"/>

                </RelativeLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/heart_container"
                    android:background="@drawable/follow_btn_selector"
                    android:visibility="gone"
                    android:textColor="@color/bright" />

                <RelativeLayout
                    android:id="@+id/share_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/heart_container" >

                    <ImageView
                        android:id="@+id/share_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/share_bar_icn"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <!--android:layout_alignParentRight="true"-->
                <RelativeLayout
                    android:id="@+id/heart_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/delete_button"
                    android:layout_alignWithParentIfMissing="true">

                    <TextView
                        android:id="@+id/heart_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"
                        android:text="1"
                        android:drawableRight="@drawable/like_icn"
                        android:textColor="@color/bright" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/settings_button"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:textSize="21dp"
                    android:textColor="@color/settingsFontColor"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/time_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/timeAgoFontColor"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/settings_button"
                    android:layout_marginRight="5dp"
                    android:textSize="11dp"
                    android:visibility="gone"
                    app:createdAt="@{optograph.created_at}"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/description_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/private_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_toLeftOf="@+id/description_label"
                android:textColor="@color/bright"
                app:font="@{``}"
                android:visibility="gone" />

            <com.iam360.iam360.views.ExpandableTextView
                android:id="@+id/description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:maxWidth="288dp"
                app:font="@{``}"
                android:text="@{optograph.text}"
                android:textColor="@color/bright"
                app:trimLength="32" />

            <TextView
                android:id="@+id/feed_upload_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/description_label"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableStart="@drawable/abc_ic_commit_search_api_mtrl_alpha"
                android:paddingBottom="3dp"
                android:text="upload"
                app:font="@{``}"
                android:textColor="@color/bright"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/feed_upload_progress"
                style="@android:style/Widget.ProgressBar.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/description_label"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="3dp"
                android:textColor="@color/bright"
                android:visibility="gone" />

        </RelativeLayout>

    </FrameLayout>

</layout>