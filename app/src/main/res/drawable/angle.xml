<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:bottom="10dp">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:shape="line"
                android:top="3dp" >
                <stroke
                    android:width="1dp"
                    android:color="#FF0000" />
                <size
                    android:width="25dp"
                    android:height="10dp"/>
            </shape>
        </rotate>
    </item>

    <item android:top="10dp">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90">
            <shape
                android:shape="line"
                android:top="3dp" >
                <stroke
                    android:width="1dp"
                    android:color="@android:color/transparent" />
                <size
                    android:width="10dp"
                    android:height="10dp"/>
            </shape>
        </rotate>
    </item>

</layer-list>